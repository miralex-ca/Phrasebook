<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:scrollbars="vertical"
    android:fillViewport="true"
    android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top"
            android:padding="20dp"
            >


            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginRight="0dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="12dp"
                    android:layout_gravity="right"
                    android:alpha="0.6"
                    android:textSize="12sp"
                    android:id="@+id/itemCharCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:inputType="textCapSentences|textMultiLine"
                    android:paddingTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dialog_edit_item_text"
                    android:maxLength="@integer/ucat_title_limit"
                    android:maxLines="6"
                    android:textSize="20sp"
                    android:id="@+id/editItem"
                    />
            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:layout_marginRight="0dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="12dp"
                    android:layout_gravity="right"
                    android:alpha="0.6"
                    android:textSize="12sp"
                    android:id="@+id/addInfoCharCounter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:paddingTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/dialog_edit_item_extra"
                    android:maxLength="@integer/edit_info_length"
                    android:maxLines="2"
                    android:textSize="15sp"
                    android:id="@+id/editAddInfo"
                    />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />




        </LinearLayout>

</android.support.v4.widget.NestedScrollView>
