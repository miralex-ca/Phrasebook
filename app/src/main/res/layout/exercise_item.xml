<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/fCardContent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/exQuest"
        style="@style/exQuestWrapper">


        <RelativeLayout

            android:visibility="gone"

            android:id="@+id/exAudioWrapper"

            android:layout_marginTop="35dp"
            android:focusable="true"
            android:clickable="true"

            android:minHeight="105dp"
            android:theme="@style/audioTest"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_speaker"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                app:elevation="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                app:fabCustomSize="85dp"
                android:scaleType="center"
                app:maxImageSize="45dp"
                app:srcCompat="@drawable/ic_speaker_test" />


        </RelativeLayout>

        <RelativeLayout
            style="@style/exImageWrapper"
            android:visibility="gone"
            android:id="@+id/exImageWrapper"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"

            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/exImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/test_img_size"/>

            <TextView
                android:id="@+id/exImgCounter"
                android:gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"

                android:background="@drawable/test_img_icon_bg"
                android:layout_alignTop="@+id/exImage"
                android:layout_alignLeft="@+id/exImage"
                android:text="0/0"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="35dp"
            android:id="@+id/exTextWrapper"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fCardText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/exTextBox"/>

        <TextView
            android:id="@+id/fTranscriptBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/fTranscriptBox"/>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:weightSum="1"
            >
            <!-- difference with ph in layout_weight -->
            <LinearLayout

                android:orientation="vertical"
                android:id="@+id/radioGroup1"

                android:layout_width="0dp"
                android:layout_weight=".95"
                android:layout_height = "wrap_content"
                android:theme="@style/RadioTheme"
                android:minHeight = "@dimen/ex_radiogroup_min_height"
                style="@style/exRadioGroup" >


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>





