<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cat_item_wrap"

    android:gravity="center_horizontal"

    >



    <RelativeLayout

        android:padding="0dp"

        style="@style/CardWrapper.Width"
        android:layout_height="match_parent">


        <RelativeLayout

            android:paddingLeft="@dimen/card_wrap_padding"
            android:paddingRight="@dimen/card_wrap_padding"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <android.support.v7.widget.CardView
                android:layout_height="wrap_content"
                app:contentPadding="0dp"


                android:layout_gravity="center_horizontal"
                android:layout_width="match_parent"


                style="@style/CardViewStyle.Widget"

                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="?attr/CardViewBorder"
                    />

                <RelativeLayout

                    android:id="@+id/wrap"


                    android:paddingLeft="18dp"

                    android:paddingBottom="0dp"

                    android:focusable="true"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <RelativeLayout

                        android:layout_centerVertical="true"
                        android:id="@+id/settings"

                        android:paddingTop="5dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingBottom="5dp"
                        android:layout_marginRight="16dp"

                        android:layout_gravity="right"

                        android:layout_alignParentRight="true"

                        android:gravity="center_horizontal"

                        android:focusable="true"
                        android:clickable="true"
                        android:background="?android:attr/selectableItemBackground"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:id="@+id/img"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            app:srcCompat="@drawable/ic_action_unarchive" />


                        <TextView
                            android:layout_marginTop="2dp"
                            android:layout_below="@+id/img"
                            android:id="@+id/unarchiveTxt"
                            android:textSize="12sp"
                            android:text="Извлечь"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/wrapTxt"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="80dp"
                        >


                        <TextView

                            android:textSize="20sp"
                            android:id="@+id/title"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            />


                        <TextView
                            android:layout_marginTop="6dp"
                            android:textColor="?attr/colorSecondaryText"
                            android:textSize="12sp"
                            android:id="@+id/desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            />


                    </LinearLayout>



                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>