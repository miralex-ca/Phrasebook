<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:gravity="center_horizontal"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    >


    <LinearLayout
        android:focusableInTouchMode="true"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/main_card_top"
        style="@style/CardWrapper.Width"
        >

        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            app:contentPadding="0dp"
            android:layout_gravity="center_horizontal"

            android:layout_width="match_parent"
            style="@style/CardViewStyle"

            android:minHeight="80dp"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="?attr/CardViewBorder"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/card_stats_side"
                    android:paddingRight="@dimen/card_stats_side"

                    android:paddingTop="@dimen/card_stats_top"
                    android:paddingBottom="@dimen/card_stats_btm"

                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="12dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingLeft="24dp"

                        >


                        <RelativeLayout
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >


                            <ImageView
                                android:layout_centerInParent="true"
                                android:id="@+id/catImage"
                                android:layout_width="85dp"
                                android:layout_height="85dp" />

                            <RelativeLayout
                                android:orientation="horizontal"
                                android:background="@color/transparent"
                                android:layout_centerInParent="true"

                                android:id="@+id/selectImg"
                                android:focusable="true"
                                android:clickable="true"

                                android:layout_width="95dp"
                                android:layout_height="95dp">

                            <ImageView

                                android:layout_centerInParent="true"
                                android:background="?selectableItemBackgroundBorderless"

                                android:layout_width="63dp"
                                android:layout_height="63dp" />

                            </RelativeLayout>


                        </RelativeLayout>


                        <TextView

                            android:text="Мой словарь"
                            android:maxLines="1"
                            android:id="@+id/sectionTitle"
                            android:textSize="@dimen/section_title_txt_size"

                            android:layout_marginRight="100dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="Добавлено тем:  "

                            android:id="@+id/userCounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"

                            android:maxLines="1"
                            android:ellipsize="end"

                            android:layout_below="@+id/sectionTitle"
                            android:layout_marginRight="90dp"
                            android:layout_marginTop="12dp"
                            android:textSize="14sp" />

                        <TextView
                            android:text="Добавлено записей: "

                            android:id="@+id/itemsCounts"
                            android:layout_below="@+id/userCounts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"

                            android:maxLines="1"
                            android:ellipsize="end"


                            android:layout_marginRight="90dp"
                            android:layout_marginTop="6dp"
                            android:textSize="14sp" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView

            android:layout_height="wrap_content"
            app:contentPadding="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"

            style="@style/CardViewStyle"

            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="?attr/CardViewBorder"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="30dp"
                >


                <LinearLayout


                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout

                        android:id="@+id/extToList"
                        android:focusable="true"
                        android:clickable="true"

                        android:paddingTop="12dp"
                        android:paddingBottom="14dp"
                        android:paddingLeft="18dp"
                        android:paddingRight="16dp"

                        android:gravity="center_vertical"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView


                            android:fontFamily="sans-serif-light"
                            android:textStyle="bold"
                            android:layout_centerVertical="true"
                            android:textSize="18sp"
                            android:text="Cписок тем"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <ImageView
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:id="@+id/listStarIcon"
                            app:srcCompat="@drawable/ic_arrow_forward"
                            android:layout_width="24dp"
                            android:layout_height="24dp" />

                    </RelativeLayout>

                    <View
                        android:alpha="0.6"
                        android:background="?attr/colorCardDivider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />



                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginTop="8dp"
                            android:id="@+id/newCatBtn"
                            android:padding="4dp"
                            android:focusable="true"
                            android:clickable="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:textColor="?attr/colorAccent"
                            android:layout_marginBottom="16dp"
                            android:textSize="22sp"
                            android:text="＋ Новая тема"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>



                        <android.support.v7.widget.RecyclerView
                            android:layout_marginTop="6dp"
                            android:id="@+id/recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="false"
                            android:nestedScrollingEnabled="false"
                            />


                        <RelativeLayout
                            android:id="@+id/openMoreWrap"

                            android:layout_marginTop="18dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.CardView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                app:cardElevation="0dp"
                                android:layout_gravity="bottom|center"
                                app:contentPadding="0dp"
                                app:cardCornerRadius="18dp"

                                >

                                <RelativeLayout

                                    android:id="@+id/openMore"
                                    android:focusable="true"
                                    android:clickable="true"
                                    android:background="?android:attr/selectableItemBackground"

                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="8dp"
                                    android:paddingTop="8dp"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">


                                    <TextView
                                        android:layout_centerVertical="true"
                                        android:id="@+id/openMoreTxt"
                                        android:fontFamily="sans-serif-light"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:text="Полный список"
                                        android:layout_marginRight="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>


                                    <ImageView
                                        android:layout_centerVertical="true"
                                        android:layout_toRightOf="@+id/openMoreTxt"
                                        app:srcCompat="@drawable/ic_arrow_forward"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp" />


                                </RelativeLayout>

                            </android.support.v7.widget.CardView>



                        </RelativeLayout>


                        <RelativeLayout

                            android:id="@+id/openUnpaidWrap"
                            android:visibility="gone"
                            android:layout_marginTop="18dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <android.support.v7.widget.CardView
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                app:cardElevation="0dp"
                                android:layout_gravity="bottom|center"
                                app:contentPadding="0dp"
                                app:cardCornerRadius="18dp"

                                >

                                <RelativeLayout

                                    android:onClick="openGetPremium"

                                    android:id="@+id/openUnpaid"
                                    android:focusable="true"
                                    android:clickable="true"
                                    android:background="?android:attr/selectableItemBackground"

                                    android:paddingLeft="16dp"
                                    android:paddingRight="16dp"
                                    android:paddingBottom="8dp"
                                    android:paddingTop="8dp"

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">


                                    <TextView
                                        android:layout_centerVertical="true"
                                        android:id="@+id/openPlusTxt"
                                        android:fontFamily="sans-serif-light"
                                        android:textStyle="bold"
                                        android:textSize="18sp"
                                        android:textColor="?attr/colorAccent"
                                        android:text="Больше с версией PLUS"
                                        android:layout_marginRight="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>



                                </RelativeLayout>

                            </android.support.v7.widget.CardView>



                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <View
            android:layout_width="match_parent"
            android:layout_height="70dp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>



